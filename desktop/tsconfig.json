{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$stores/*": ["src/stores/*"],
      "$components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"]
}
