{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orchestra",
  "version": "0.1.0",
  "identifier": "com.orchestra.desktop",
  "build": {
    "beforeDevCommand": "node scripts/tauri-before-dev.mjs",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Orchestra",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "DAG-based AI Agent Orchestration",
    "longDescription": "Orchestra is a visual workflow builder for orchestrating AI agents like Claude, Codex, and Gemini. Build complex multi-agent pipelines with DAG-based execution.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "providerShortName": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
